#!/bin/bash

rm -fr resources/public/js/*

compile_upload_js () {
    clj -A:js
    echo "static js generated"
}

# Update another implementation example
compile_upload_js_bis () {
    clj -A:js-bis
    echo "static js generated"
}

# Compile js for dev.cljs.edn
if [[ $1 == "js" ]]; then
    compile_upload_js
fi

# Compile js for dev.cljs.edn
if [[ $1 == "js-bis" ]]; then
    compile_upload_js_bis
fi

# Build *.html
if [[ $1 == "web" ]]; then
    clj -m choices.build
fi

# Build *.html
if [[ $1 == "json" ]]; then
    clj -m choices.json
fi

if [[ $1 == "all" ]]; then
    compile_upload_js
    compile_upload_js_bis
    clj -m choices.json
    clj -m choices.build
fi
